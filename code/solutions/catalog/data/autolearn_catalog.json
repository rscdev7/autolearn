                        "n_record":150,

                        "pre_processing":   [
                                                { "step": 1 , "computation" : "load_from_disk" } ,
                                                { "step": 2 , "computation" : "train_test_split" }
                                            ]
                     },

                     { 
                        "dataset_name":"Height-Weight Dataset",

                        "dataset_task":"Classification",

                        "dataset_description":"Il dataset Height-Weight Ã¨ un sottoinsieme dei dati estratti dalla 'National Health Interview Survey'.\n Il set di dati ha 3 feature (Indice di Massa Corporea (BMI), Altezza e Peso) e una label (Sesso dell'individuo).\n Il dataset contiene 4231 record.",

                        "features":["BMI" , "height" , "weight"],

                        "label":["sex"],

                        "n_record":4231,

                        "pre_processing":   [
                                                { "step": 1 , "computation" : "load_from_disk" } ,
                                                { "step": 2 , "computation" : "train_test_split" }
                                            ]
